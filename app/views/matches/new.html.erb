<h2 class="mb-4">Create New Match</h2>
<%= form_with(model: @match, local: true, class: "needs-validation") do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>
  <div class="mb-3">
    <%= form.label :location, class: "form-label" %>
    <%= form.text_field :location, class: "form-control", required: true %>
  </div>
  <div class="mb-3">
    <%= form.label :date, class: "form-label" %>
    <%= form.date_field :date, class: "form-control", required: true %>
  </div>
  <div class="mb-3">
    <%= form.label :time, class: "form-label" %>
    <%= form.time_field :time, class: "form-control", required: true %>
  </div>
  <%= form.submit "Create Match", class: "btn btn-success" %>
<% end %>