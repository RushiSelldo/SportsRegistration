<!-- app/views/users/show.html.erb -->
<div class="container">
  <h1><%= @user.name %>'s Profile</h1>
  <p><strong>Email:</strong> <%= @user.email %></p>

  <h3>Hosted Matches</h3>
  <% if @hosted_matches.any? %>
    <ul class="list-group">
      <% @hosted_matches.each do |match| %>
        <li class="list-group-item">
          <%= link_to match.title, match_path(match) %> - <%= match.sport_type %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted">No hosted matches.</p>
  <% end %>

  <h3>Joined Matches</h3>
  <% if @joined_matches.any? %>
    <ul class="list-group">
      <% @joined_matches.each do |match| %>
        <li class="list-group-item">
          <%= link_to match.title, match_path(match) %> - <%= match.sport_type %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted">No joined matches.</p>
  <% end %>

  <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-secondary" %>
  <%= link_to 'Back to Users', users_path, class: "btn btn-outline-primary" %>
</div>
