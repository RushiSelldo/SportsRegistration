<!-- app/views/users/index.html.erb -->
<div class="container">
  <h1 class="mb-4">All Users</h1>
  <%= link_to 'Create New User', new_user_path, class: "btn btn-primary mb-3" %>

  <% if @users.any? %>
    <ul class="list-group">
      <% @users.each do |user| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <strong><%= link_to user.name, user_path(user) %></strong>
          <span>
            <%= link_to 'Edit', edit_user_path(user), class: "btn btn-secondary btn-sm" %>
            <%= link_to 'Delete', user_path(user), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: 'Are you sure?' } %>
          </span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted">No users found. Create a new one above!</p>
  <% end %>
</div>
